!--------------------------------------------------
! XServer configuration file
! file:     ~/.Xresources
!--------------------------------------------------

! Cursor settings:
xcursor.theme:			Vanilla-DMZ

! Font settings:
xft.dpi:				300
!xft.antialias:			true
!xft.hinting:			true
!xft.rgba:				rgb
!xft.lcdfilter:          lcddefault
!xft.hintstyle:			hintfull

! urxvt settings:
urxvt*font:             xft:Dejavu Sans Mono for Powerline:pixelsize=18
!urxvt*font:              -*-terminus-*-*-*-*-*-*-*-*-*-*-*-*
!urxvt*font:             xft:Source Code Pro:pixelsize=13
!urxvt*font:             xft:Menlo:pixelsize=13
urxvt*scrollBar:		false
urxvt*internalBorder:	3
urxvt*letterSpace:      -1
urxvt*cursorBlink:      true
!urxvt.transparent:      true
!urxvt.shading: 15
URxvt.perl-ext-common:  default,matcher
URxvt.matcher.button:   1
urxvt.urlLauncher:   	/usr/bin/firefox
urxvt.underlineURLs: 	true

!urxvt.depth:            32
urxvt.inputMethod:       none
urxvt.preeditType:       OverTheSpot

urxvt.cursorColor:      #DDDDDD

! xdvi settings:
xdvi*background:		white
xdvi*foreground:		black
xdvi.editor:            gvim --remote-wait +%l "+normal %c|" %f

!urxvt*underLine: on
urxvt*colorMode: on
urxvt*dynamicColors: off
urxvt*highlightSelection: true

urxvt*color0: #000000
urxvt*color1: #a40000
urxvt*color2: #4E9A06
urxvt*color3: #C4A000
urxvt*color4: #3465A4
urxvt*color5: #75507B
urxvt*color6: #ce5c00
urxvt*color7: #babdb9
urxvt*color8: #555753
urxvt*color9: #EF2929
urxvt*color10: #8AE234
urxvt*color11: #FCE94F
urxvt*color12: #729FCF
urxvt*color13: #AD7FA8
urxvt*color14: #ffffff
urxvt*color15: #ffffff
urxvt*background: #000000
urxvt*foreground: #ffffff


URxvt.perl-ext: default,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
